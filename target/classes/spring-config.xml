<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- PropertyPlaceholderConfigurer bean to load external properties -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:config.properties" />
    </bean>

    <!-- Define Circle bean -->
    <bean id="circle" class="Circle">
        <constructor-arg value="5" />
    </bean>

    <!-- Define Square bean with a property placeholder for sideLength -->
    <bean id="square" class="Square">
        <property name="side" value="${square.sideLength}" />
    </bean>

    <!-- Define Mechanism objects -->
    <bean id="circleMechanism" class="Mechanism">
        <constructor-arg ref="circle" />
    </bean>

    <bean id="squareMechanism" class="Mechanism">
        <constructor-arg ref="square" />
    </bean>

    <!-- Main class bean -->
    <bean id="mainClass" class="Main">
        <property name="squareMechanism" ref="squareMechanism" />
    </bean>

</beans>